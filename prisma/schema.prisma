datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.0.x"]
}

enum Role {
  STUDENT
  COACH
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(STUDENT)
  lichessId     String?   @unique
  
  // Ratings
  ratingPuzzle         Int?
  ratingBullet         Int?
  ratingBlitz          Int?
  ratingRapid          Int?
  ratingClassical      Int?
  ratingCorrespondence Int?
  puzzleRd             Float     @default(350)
  puzzleVolatility     Float     @default(0.06)
  
  accounts      Account[]
  sessions      Session[]
  
  createdPuzzles Puzzle[]
  createdOpenings Opening[]
  createdPractices Practice[]
  
  // Student progress tracking
  practiceProgress  PracticeLineProgress[]
  openingProgress   OpeningProgress[]
  gameRecords       GameRecord[]
  puzzleAttempts    PuzzleAttempt[]
  practiceAttempts  PracticeAttempt[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Puzzle {
  id          String   @id @default(cuid())
  name        String   @unique
  fen         String
  solution    String
  description String?
  rating      Int      @default(1200)
  ratingDeviation Float    @default(350)
  volatility      Float    @default(0.06)
  tags        String[]
  hints       Json?    // Array of strings, one per move index
  createdBy   String
  creator     User     @relation(fields: [createdBy], references: [id])
  createdAt   DateTime @default(now())
  attempts    PuzzleAttempt[]
}

model PuzzleAttempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzleId  String
  puzzle    Puzzle   @relation(fields: [puzzleId], references: [id], onDelete: Cascade)
  success   Boolean
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([puzzleId])
}

model Opening {
  id          String   @id @default(cuid())
  name        String
  pgn         String
  description String?
  createdBy   String
  creator     User     @relation(fields: [createdBy], references: [id])
  createdAt   DateTime @default(now())
  steps       OpeningStep[]
  progress    OpeningProgress[]
}

model OpeningStep {
  id          String   @id @default(cuid())
  openingId   String
  opening     Opening  @relation(fields: [openingId], references: [id], onDelete: Cascade)
  fen         String
  arrows      String?  // JSON string of arrows e.g. "[['e2', 'e4', 'green']]"
  description String?
  order       Int
}

enum PlayerColor {
  WHITE
  BLACK
}

model Practice {
  id          String      @id @default(cuid())
  name        String
  description String?
  playerColor PlayerColor @default(WHITE)  // Which side the student plays
  createdBy   String
  creator     User        @relation(fields: [createdBy], references: [id])
  createdAt   DateTime    @default(now())
  nodes       PracticeNode[]
  progress    PracticeLineProgress[]
  attempts    PracticeAttempt[]
}

model PracticeNode {
  id          String   @id @default(cuid())
  practiceId  String
  practice    Practice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  parentId    String?  // null for root node
  parent      PracticeNode?  @relation("NodeTree", fields: [parentId], references: [id], onDelete: Cascade)
  children    PracticeNode[] @relation("NodeTree")
  fen         String   // Position AFTER this move is made
  move        String?  // UCI move string (e.g. "e2e4"), null for root node
  notes       String?  // Coach notes for this move/position
  order       Int      @default(0)  // For ordering siblings
}

// ============================================
// STUDENT PROGRESS TRACKING
// ============================================

enum LineStatus {
  PERFECT      // Completed without any wrong moves
  COMPLETED    // Completed but made some wrong moves
  PARTIAL      // Started but didn't complete
  NEVER_SEEN   // Never attempted this line
}

// Tracks student progress on each practice line (leaf node path)
model PracticeLineProgress {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  practiceId    String
  practice      Practice   @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  lineSignature String     // Unique identifier for this line (e.g., comma-separated node IDs from root to leaf)
  status        LineStatus @default(NEVER_SEEN)
  attempts      Int        @default(0)
  perfectCount  Int        @default(0)  // Number of times completed perfectly
  lastAttemptAt DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([userId, practiceId, lineSignature])
}

model PracticeAttempt {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  practiceId    String
  practice      Practice   @relation(fields: [practiceId], references: [id], onDelete: Cascade)
  lineSignature String
  status        LineStatus
  createdAt     DateTime   @default(now())

  @@index([userId])
  @@index([practiceId])
}

// Tracks which openings a student has studied (viewed)
model OpeningProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  openingId   String
  opening     Opening  @relation(fields: [openingId], references: [id], onDelete: Cascade)
  viewCount   Int      @default(0)
  lastViewedAt DateTime?
  completed   Boolean  @default(false)  // Viewed all steps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, openingId])
}

// Records of games played (for later review)
model GameRecord {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lichessGameId String   // The Lichess game ID
  opponentId    String?  // Lichess ID of opponent (if known)
  opponentName  String?  // Name of opponent
  playerColor   PlayerColor
  result        String?  // "win", "loss", "draw"
  openingName   String?  // Opening name if detected
  playedAt      DateTime @default(now())
  
  @@index([userId])
  @@index([lichessGameId])
}
